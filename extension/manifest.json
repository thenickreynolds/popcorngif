{
  "manifest_version": 3,
  "name": "Popcorn GIF Search",
  "version": "1.8",
  "description": "Search for GIFs in your browser - quickly save, copy, or get GitHub markup!",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Popcorn GIF Search",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{ 
    "resources": ["popup.html"],
    "matches": []
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+G"
      }
    }
  },
  "permissions": [
    "downloads"
  ]
}
